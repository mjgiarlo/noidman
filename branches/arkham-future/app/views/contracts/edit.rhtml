<h1>Editing contract</h1>

<%= error_messages_for :contract %>

<% form_for(:contract, :url => contract_path(@contract), :html => { :method => :put }) do |f| %>
  <p>
    <b>Statement</b><br />
    <%= f.text_area :statement %>
  </p>

  <p>
    <b>Label</b><br />
    <%= f.text_field :label %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', contract_path(@contract) %> |
<%= link_to 'Back', contracts_path %>