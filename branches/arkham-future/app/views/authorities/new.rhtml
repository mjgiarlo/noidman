<h1>New authority</h1>

<%= error_messages_for :authority %>

<% form_for(:authority, :url => authorities_path) do |f| %>
  <p>
    <b>Number</b><br />
    <%= f.text_field :number %>
  </p>

  <p>
    <b>Label</b><br />
    <%= f.text_field :label %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', authorities_path %>